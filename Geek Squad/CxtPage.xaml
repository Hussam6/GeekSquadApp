<Page
    x:Class="Geek_Squad.CxtPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Geek_Squad"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <RelativePanel BorderThickness="20">
            <TextBlock x:Name="welcomeTv" Text="Welcome, User!" FontSize="60" Margin="25"/>
            <Button x:Name="checkStatusBtn" Content="Check the status of your order" FontSize="40" Margin="25" RelativePanel.Below="welcomeTv"></Button>
        </RelativePanel>

    </Grid>
</Page>
